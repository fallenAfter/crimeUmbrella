<script>
    //store input elements into an array and check for range attribute so events can be made to update the output giving users a visual token for value
        var inputs = document.getElementsByTagName('input');
        for(var counter=0;counter<=inputs.length;counter++){
            //check if input is a  slider
            if(inputs[counter].getAttribute('type')==='range'){
                // run function to set initial value
                sliderValue(inputs[counter]);
                //update value on change
                inputs[counter].addEventListener('change', function(){
                    sliderValue(this);
                })

            }
        }

        //add script for updating an output that will show value of range slider
        function sliderValue(input){
            input.nextSibling.innerHTML=input.value;
        }
</script>
